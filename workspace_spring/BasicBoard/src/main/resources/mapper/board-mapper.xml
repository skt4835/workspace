<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="boardMapper">
    <resultMap id="board" type="com.green.BasicBoard.vo.BoardVO">
        <result column="BOARD_NUM"   property="boardNum"/>
        <result column="TITLE"   property="title"/>
        <result column="WRITER"   property="writer"/>
        <result column="CONTENT"   property="content"/>
        <result column="CREATE_DATE"   property="createDate"/>
        <result column="READ_CNT"   property="readCnt"/>
    </resultMap>

<!--  게시글 목록 조회  -->
    <select id="getBoardList" resultMap="board">
        SELECT BOARD_NUM
            , TITLE
            , WRITER
            , CREATE_DATE
            , READ_CNT
        FROM BASIC_BOARD
        <if test="searchValue != null and !searchValue.equals('')">
<!-- #{} #이 붙으면 자동으로 '' 이 붙어서 문자열로 인식됨 -->
<!-- 컬럼명이 바뀌어야 할 경우 #{} 이 아닌 ${}을 사용해야함 -->
            WHERE ${searchKeyword} LIKE CONCAT('%', #{searchValue}, '%')
        </if>
    </select>

<!--  게시글 작성  -->
    <insert id="writeForm">
<!--   빈 값을 채우기 위해 가져온 VO 객체에서 getter 를 호출하여 빈 값 채움    -->
        INSERT INTO BASIC_BOARD (TITLE
            , WRITER
            , CONTENT
        )
        VALUES (#{title}
            , #{writer}
            , #{content}
        );
    </insert>

<!--  게시글 상세보기  -->
    <select id="getDetail" resultMap="board">
        SELECT BOARD_NUM
            , TITLE
            , WRITER
            , CREATE_DATE
            , READ_CNT
            , CONTENT
        FROM BASIC_BOARD
        WHERE BOARD_NUM = #{boardNum};
    </select>

<!--  게시글 삭제  -->
    <delete id="deleteBoard">
        DELETE FROM BASIC_BOARD
        WHERE BOARD_NUM = #{boardNum}
    </delete>

<!--  게시글 조회수 증가  -->
    <update id="getBoardReadCnt">
        UPDATE BASIC_BOARD
        SET
        READ_CNT = READ_CNT + 1
        WHERE BOARD_NUM = #{boardNum}
    </update>



	
</mapper>































